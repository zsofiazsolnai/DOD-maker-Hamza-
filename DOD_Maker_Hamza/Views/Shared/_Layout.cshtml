<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/Site.css" type="text/css">
    <title> DoD Maker - Hamza's group  </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <ul>
        <li> DoD Maker
    </ul>
    @if (Session["UserID"] == null)
    {
        @Html.ActionLink("Login", "Login", "Account", null, new { @class = "toplink1" })
        @Html.ActionLink("Sign up", "Register", "Account", null, new { @class = "toplink2" })
    }
    else
    {
        @Html.ActionLink("Logout", "LogOut", "Account", null, new { @class = "toplink2" })
    }

    <div class="footer">
        @RenderBody()
        <hr />
        <footer>
            <p class="small">
                @Html.ActionLink("Help", "Help", "Home") -
                @Html.ActionLink("Contact", "Contact", "Home") -
                @Html.ActionLink("About", "About", "Home") <br />
                &copy; @DateTime.Now.Year - DoD Maker - Hamza's group

            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
